#include <stdio.h>
int main()
{
	int a;
	float b;
	char c;
	
	printf("enter a number\n");
	scanf("%d", &a);
	printf("enter a float\n");
	scanf("%f", &b);
	printf("enter a character\n");
	scanf(" %c", &c);
	

	printf("\nInt occupies %d bytes\n", sizeof(a));
	printf("Float occupies %d bytes\n", sizeof(b));
	printf("Char occupies %d bytes\n", sizeof(c));
}
